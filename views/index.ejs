<%- include("partials/header.ejs") %>
<section id="main-page-welcome">
  <div class="container-fluid">
    <div class="row">

      <div class="col-12">

        <div id="carouselExampleCaptions" class=" mw50 d-flex align-items-center carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src=<%= pictures[0]%> class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5><%= titles[0]%></h5>
          <p><%= description[0]%></p>
        </div>
      </div>
      <div class="carousel-item">
        <img src=<%= pictures[1]%> class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5><%= titles[1]%></h5>
          <p><%= description[1]%></p>
        </div>
      </div>
      <div class="carousel-item">
        <img src=<%= pictures[2]%> class="d-block w-100 " alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5><%= titles[2]%></h5>
          <p><%= description[2]%></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 border-seperator mb-3">
  </div>
      </div>
    </div>
</section>

<section id="main-page-latest-updates">
<div class="container-fluid">

<% description.forEach((x, index) => { %>
<div class="col-lg-7 col-sm-11 d-flex justify-content-center ">
  <div class="row">
  <div class="col-md-6 pt-4">
  <a href="/article/"<%= ids[index]%> ><img src=<%= pictures[index] %> alt=""></a>

  </div>
<div class="col-md-6">
  <div class="">
    <p class="tag"><%= tags[index]%></p>
    <a class="link-dark" href=<%= "/article/" + ids[index]%>><h2><%= titles[index]%></h2></a>
  <p>
  <i class="fa-solid fa-pen"></i> <b> <%=dates[index]%></b>
  <%  if (tags[index]=="Hiking")  { %>
<i class=" ps-4 fa-solid fa-location-dot"></i> <b>     <%=locations[index]%></b>
  <%  } %>

</div>
<div class="texttt">
  <p><%= x  %></p>
</div>
<div class="readMore">
<a href="/upload">Read more</a>
</div>

</div>
<div class=" border-seperator ">
</div>
  </div>

</div>
<% } ); %>


</div>


</section>
<%- include("partials/footer.ejs") %>
