
<%- include("partials/header.ejs") %>

<!DOCTYPE html>

    <div class="container d-flex justify-content-center flex-column">
      <form  action="upload" method="post">
        <div class="form-group">
          <label for="titleText">Title</label>
          <input class="form-control" type="text" id="titleText" name="Title" value="">
        </div>
        <div class="form-group">
          <label for="thumbnail">Thumbnail</label>
          <input class="form-control" type="text" id="thumbnail" name="Thumbnail" value="">
        </div>
        <div class="form-group">
          <label for="tags">Tag</label>
          <select class="form-select" aria-label="Select the tag" id="tags" name="Tag" >
            <option selected>Choose a tag</option>
            <option value="HTML">HTML</option>
            <option value="CSS">CSS</option>
            <option value="Javascript">Javascript</option>
            <option value="Ethical Hacking">Ethical Hacking</option>
            <option value="MongoDB">MongoDB</option>
            <option value="Hiking">Hiking</option>
            </select>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" id="location" name="Location" value="">
        </div>
        <div class="form-group">
          <label for="descriptionText">Description: max 200 words</label>
          <span id="char-count">0/200</span>
          <textarea class="form-control" id="descriptionText" name="Description" rows="8" cols="80"></textarea>

        </div>
        <div class="form-group">
          <label for="articleText">article</label>
          <textarea class="form-control" id="articleText" name="Article" rows="8" cols="80"></textarea>

        </div>
<button type="submit"  name="button">submit</button>
      </form>
    </div>

  </body>

</html>
